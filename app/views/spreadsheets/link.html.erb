<div class="type-id">
  <%= form_for @spreadsheet do |f| %>
    <div class="form-group">
      <%= f.text_field :link_name, autofocus: true, placeholder: "Enter your link name" %>
    </div>
    <%= f.submit 'NEXT' %>
  <% end %>
  <% if @spreadsheet.errors.present? %>
    <ul class="after-rendering"><li><%= @spreadsheet.errors.full_messages.to_sentence%></li></ul>
  <% end %>
</div>